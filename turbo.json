{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:web": {
      "env": ["NEXT_PUBLIC_API_URL", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:api": {
      "env": [".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
