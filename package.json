{
  "name": "line_bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "dotenv -- turbo start",
    "start:dev": "dotenv -- turbo start:dev",
    "build": "dotenv -- turbo build",
    "build:web": "dotenv -- turbo build --filter=web",
    "build:api": "dotenv -- turbo build --filter=api",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*"
  ],
  "description": "Online Shop Demo",
  "author": "m110033@gmail.com",
  "engines": {
    "node": ">=20.x",
    "npm": ">=9.x"
  }
